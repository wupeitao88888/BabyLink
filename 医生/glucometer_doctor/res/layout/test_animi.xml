<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@id/back"
            style="@style/title_left_button" >

            <ImageView
                android:layout_width="@dimen/back_width"
                android:layout_height="@dimen/back_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_button"
                android:padding="@dimen/commn_space" />
        </LinearLayout>

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#ffffffff" />

        <LinearLayout
            style="@style/title_left_button"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="@dimen/back_width"
                android:layout_height="@dimen/back_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_button"
                android:padding="@dimen/commn_space" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:src="@drawable/test_animation" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/commn_space"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="血糖仪是否在手机附近？"
                    android:textColor="@color/tab_text_color" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尝试重新启动蓝牙"
                    android:textColor="@color/tab_text_color" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="如果血糖仪已经在手机附近，并且血糖仪已经显示开启，可以尝试将手机的蓝牙关闭后重新打开，稍等一会儿后，重新启动血糖仪。"
                    android:textColor="@color/tab_text" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启动血糖仪。"
                    android:textColor="@color/tab_text_color" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="如果还是未能连接血糖仪，请退出糖贝安应用程序，重新打开血糖仪。"
                    android:textColor="@color/tab_text" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尝试重启手机。"
                    android:textColor="@color/tab_text_color" />
                 <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尝试重启手机。
                    
                    
                    "
                    android:visibility="invisible"
                    android:textColor="@color/tab_text_color" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>