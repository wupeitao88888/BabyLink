<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:id="@+id/me_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/me_initiate"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="我发起的"
            android:textColor="@drawable/selector_title_home"
            android:textSize="15sp" />

        <Button
            android:id="@+id/me_take_part_in"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="我参与的"
            android:textColor="@drawable/selector_title_home"
            android:textSize="15sp" />
    </LinearLayout>


    <com.shiliuke.view.IndexViewPager
        android:id="@+id/me_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/me_title"></com.shiliuke.view.IndexViewPager>


</RelativeLayout>
