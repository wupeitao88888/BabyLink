<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/relativelayout"
        android:layout_marginTop="20dp">


        <RelativeLayout
            android:id="@+id/userinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <!--用户头像 -->
            <ImageView
                android:id="@+id/changepic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray" />

            <!--用户姓名 -->
            <TextView
                android:id="@+id/changeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/changepic"
                android:text="小明" />


            <TextView
                android:id="@+id/changAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="日本" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/changeUrl"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/userinfo"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changeUrl"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/exist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="有" />


            <TextView
                android:id="@+id/mineGoods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/exist"
                android:text="自行车" />


            <TextView
                android:id="@+id/exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exist"
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                android:layout_marginBottom="10dp"
                android:text="换" />


            <TextView
                android:id="@+id/exchangeGoods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/exchange"
                android:layout_toRightOf="@+id/exchange"
                android:text="奔驰" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/look_info"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:background="@color/gray" />


        </RelativeLayout>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:background="@color/gray"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品详情"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@color/gray"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/changeinfo_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/info"
        android:layout_margin="10dp"
        android:text="提交" />
</RelativeLayout>
