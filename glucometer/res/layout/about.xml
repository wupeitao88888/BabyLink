<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@id/back"
            style="@style/title_left_button" >

            <ImageView
                android:layout_width="@dimen/back_width"
                android:layout_height="@dimen/back_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_button"
                android:padding="@dimen/commn_space" />
        </LinearLayout>

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="关于"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#ffffffff" />

        <LinearLayout
            style="@style/title_left_button"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="@dimen/back_width"
                android:layout_height="@dimen/back_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_button"
                android:padding="@dimen/commn_space" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/about_pic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/commn_small_space"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            style="@style/itemText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   糖贝安(0.9.97beta)是一款妊娠期糖尿病患者专用的血糖监控应用程序，与糖贝安血糖仪配合使用。能够方便、准确的对病人的血糖值进行统计。" />
        
    </LinearLayout>

</LinearLayout>