<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/back"
            style="@style/title_left_button" >

            <ImageView
                android:layout_width="@dimen/back_width"
                android:layout_height="@dimen/back_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_button"
                android:padding="@dimen/commn_space" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="检测方案设置"
            android:textColor="#ffffffff"
            android:textSize="@dimen/title_font_size" />

        <LinearLayout
            android:id="@id/back"
            style="@style/title_left_button" >

            <ImageView
                android:layout_width="@dimen/back_width"
                android:layout_height="@dimen/back_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_button"
                android:padding="@dimen/commn_space"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_small_height"
        android:gravity="center_vertical"
            android:padding="@dimen/commn_small_space"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="0dp"
            android:background="@drawable/drop_button"
        
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/tab_text_color"
            android:textOff="已关闭"
            android:textOn="已开启"
            android:textSize="@dimen/item_text_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:background="@color/report_bg_color" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/report_table_color1"
            android:orientation="vertical" >

            <TextView
                android:id="@id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/report_table_color1"
                android:gravity="center"
                android:text="星期"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1.0px"
            android:layout_weight="2.0"
            android:orientation="vertical" >

            <TextView
                android:id="@id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:background="@color/report_table_color2"
                android:gravity="center"
                android:text="早餐"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                android:paddingTop="1.0px" >

                <TextView
                    android:id="@id/textView1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@color/report_table_color2"
                    android:gravity="center"
                    android:text="前"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@id/textView1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="1.0px"
                    android:layout_weight="1.0"
                    android:background="@color/report_table_color2"
                    android:gravity="center"
                    android:text="后"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1.0px"
            android:layout_weight="2.0"
            android:orientation="vertical" >

            <TextView
                android:id="@id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:background="@color/report_table_color1"
                android:gravity="center"
                android:text="午餐"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                android:paddingTop="1.0px" >

                <TextView
                    android:id="@id/textView1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@color/report_table_color1"
                    android:gravity="center"
                    android:text="前"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@id/textView1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="1.0px"
                    android:layout_weight="1.0"
                    android:background="@color/report_table_color1"
                    android:gravity="center"
                    android:text="后"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1.0px"
            android:layout_weight="2.0"
            android:orientation="vertical" >

            <TextView
                android:id="@id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:background="@color/report_table_color2"
                android:gravity="center"
                android:text="晚餐"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                android:paddingTop="1.0px" >

                <TextView
                    android:id="@id/textView1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@color/report_table_color2"
                    android:gravity="center"
                    android:text="前"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@id/textView1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="1.0px"
                    android:layout_weight="1.0"
                    android:background="@color/report_table_color2"
                    android:gravity="center"
                    android:text="后"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1.0px"
            android:layout_weight="1.0"
            android:background="@color/report_table_color1"
            android:orientation="vertical" >

            <TextView
                android:id="@id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/report_table_color1"
                android:gravity="center"
                android:text="凌晨"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line" />

    <ScrollView
        android:id="@id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:overScrollMode="always" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.iloomo.glucometer.view.AlertScheme
                android:id="@+id/alertScheme"
                android:layout_width="fill_parent"
                android:layout_height="1000.0dip"
                android:background="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>